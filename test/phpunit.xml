<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuite name="Sslurp Test Suite">
        <directory>./</directory>
    </testsuite>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="./clover.xml" />
    </logging>
</phpunit>
